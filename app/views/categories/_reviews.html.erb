<% if @worker.reviews.any? %>
<h3 class="ms-4">Reviews</h3>
<div class="container-reviews mb-5">


  <% @worker.reviews.each do |review| %>
    <div class="review-box">
      <div class="caja-top">
        <div class="perfil">
          <div class="perfil-i1">
            <%= cl_image_tag (review.booking.user.photo.key || "user") %>
          </div>
            <div class="name-user">
              <p class="m-0"><strong class="font_title"><%= review.booking.user.first_name %></strong>&nbsp<%= review.created_at.strftime('(%d/%m/%y %H:%M)') %></p>
              <p class="m-0 font_title"><%= review.booking.service.name %></p>
            </div>
        </div>
        <div class="reviews">
          <% review.rating.times do %>
            <i class="fas fa-star"></i>
          <% end %>
        </div>
      </div>
      <div class="comments">
        <p><%= review.content.capitalize %></p>
      </div>
    </div>
  <% end %>

</div>
<% end %>
