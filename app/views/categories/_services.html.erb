<div class="container1 position-relative mb-4">
  <h3>Services</h3>
  <% if @worker == current_user %>
    <%= link_to "+ Add Service", new_service_path, class: "bt1 position-absolute top-0 end-0" %>
  <% end %>
  <ul class="list-group mt-4 border border-3 rounded">
    <% @worker.services.each do |service| %>
      <% if @worker == current_user %>
          <li class="list-group-item d-flex justify-content-between align-items-start list-group-item-action py-3 bg-light.bg-gradient">
          <div class="me-auto ">
            <%= link_to service.name.capitalize, edit_service_path(service), class: "link-full ps-2 text-secondary" %>
          </div>
          <%= link_to service_path(service), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class:"link-inside" do %>
            <i class="fa-solid fa-trash-can"></i>
          <% end %>
          </li>
      <% else %>
      <li class="list-group-item d-flex justify-content-between align-items-start list-group-item-action py-4 bg-light.bg-gradient">
        <div class="me-auto ">
        <%= link_to service.name.capitalize, new_service_booking_path(service), class: "link-full ps-2 text-secondary" %>
        </div>
        <i class="fa-solid fa-arrow-right-to-bracket pe-1"></i>
        <i class="fa-solid fa-book"></i>
        </li>
      <% end %>
    <% end %>
  </ul>
</div>
